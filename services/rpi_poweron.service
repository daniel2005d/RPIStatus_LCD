[Unit]
Description=Ejecutar script Python al iniciar
Wants=network-online.target
After=network-online.target

[Service]
Type=simple
User=root
WorkingDirectory=/home/daniel
ExecStart=/home/daniel/poweron.sh
Environment=PYTHONUNBUFFERED=1
Restart=on-failure
RestartSec=3

[Install]
WantedBy=multi-user.target
